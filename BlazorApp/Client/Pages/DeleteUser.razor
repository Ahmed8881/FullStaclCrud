@page "/user/delete/{userId:int}"
@using BlazorApp.Shared.Models
@inject HttpClient Http
@inject NavigationManager NavigationManager

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Delete User</h4>
                </div>
                <div class="card-body">
                    <h5 class="mb-3 text-danger">Are you sure you want to delete this user?</h5>
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th>Name</th>
                                <td>@user.Username</td>
                            </tr>
                            <tr>
                                <th>Address</th>
                                <td>@user.Address</td>
                            </tr>
                            <tr>
                                <th>Cell No</th>
                                <td>@user.Cellnumber</td>
                            </tr>
                            <tr>
                                <th>E-mail</th>
                                <td>@user.Emailid</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <button class="btn btn-danger px-4" @onclick="(async () => await RemoveUser(user.Userid))">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                        <button class="btn btn-secondary px-4" @onclick="Cancel">
                            Cancel
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int userId { get; set; }
    User user = new User();

    protected override async Task OnInitializedAsync()
    {
        user = await Http.GetFromJsonAsync<User>("api/User/" + userId);
    }

    protected async Task RemoveUser(int userID)
    {
        await Http.DeleteAsync("api/User/" + userID);
        NavigationManager.NavigateTo("/fetchuserdetails");
    }

    void Cancel()
    {
        NavigationManager.NavigateTo("/fetchuserdetails");
    }
}